---
const winners = [
  { year: 2023, team: "Thunder Strikers", captain: "Rahul Sharma" },
  { year: 2022, team: "Royal Challengers", captain: "Priya Patel" },
  { year: 2021, team: "Golden Eagles", captain: "Amit Kumar" },
];
---

<section class="py-20 bg-gray-900">
  <div class="container mx-auto px-4">
    <h2
      class="text-5xl font-extrabold text-center mb-12 bg-clip-text text-transparent bg-gradient-to-r from-cyan-500 to-blue-600"
    >
      Hall of Fame
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      {
        winners.map((winner) => (
          <div class="bg-gray-800 p-8 rounded-2xl shadow-lg transition-transform transform hover:scale-105">
            <h3 class="text-3xl font-bold text-cyan-400 mb-4">
              {winner.year} Champions
            </h3>
            <p class="text-white text-2xl mb-2">{winner.team}</p>
            <p class="text-gray-400">Captain: {winner.captain}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
