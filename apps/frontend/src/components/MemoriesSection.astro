---
import { Image } from "astro:assets";

const memories = [
  { src: "/memory1.jpg", alt: "Exciting match moment" },
  { src: "/memory2.jpg", alt: "Team celebration" },
  { src: "/memory3.jpg", alt: "Award ceremony" },
  { src: "/memory4.jpg", alt: "Crowd cheering" },
];
---

<section class="py-20 bg-gray-800 bg-opacity-60">
  <div class="container mx-auto px-4">
    <h2
      class="text-4xl font-bold text-center mb-12 bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-emerald-400"
    >
      Tournament Memories
    </h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {
        memories.map((memory) => (
          <div class="overflow-hidden rounded-xl shadow-lg transition duration-300 transform hover:scale-105">
            <Image
              src={memory.src}
              alt={memory.alt}
              width={400}
              height={400}
              class="w-full h-full object-cover"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
