---
const videoUrls = [
  "https://res.cloudinary.com/dtkfvp2ic/video/upload/v1723804160/vpl/videoplayback_3_yz5zln.mp4",
  "https://res.cloudinary.com/dtkfvp2ic/video/upload/v1723804148/vpl/videoplayback_w2yw2n.mp4",
  "https://res.cloudinary.com/dtkfvp2ic/video/upload/v1723804147/vpl/videoplayback_1_ih68xu.mp4",
  "https://res.cloudinary.com/dtkfvp2ic/video/upload/v1723804146/vpl/videoplayback_2_mm70ko.mp4",
];

// Get a random video URL
const randomVideoUrl = videoUrls[Math.floor(Math.random() * videoUrls.length)];
---

<section
  class="relative min-h-screen flex items-center justify-center overflow-hidden py-20"
>
  <div class="absolute inset-0 z-0 opacity-30">
    <video
      src={randomVideoUrl}
      autoplay
      loop
      muted
      class="object-cover w-full h-full"></video>
  </div>
  <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8">
    <h1
      class="text-5xl sm:text-6xl lg:text-7xl font-bold mb-6 flex flex-wrap justify-center"
    >
      <span class="mx-2">Vishwakarma</span>
      <span class="mx-2">Premier</span>
      <span class="mx-2">League</span>
    </h1>
    <p class="text-xl sm:text-2xl mb-10 text-gray-300 max-w-3xl mx-auto">
      Experience the thrill of cricket in our annual tournament showcasing
      talent and sportsmanship.
    </p>

    <div class="flex justify-center">
      <a
        href="#register"
        class="inline-block text-white text-2xl font-medium text-md transition duration-300 transform hover:scale-105"
      >
        <span class="gradient-text">Register</span>
        <span class="gradient-text">Your</span>
        <span class="gradient-text">Team</span>
      </a>
    </div>
  </div>
</section>

<style>
  .gradient-text {
    display: inline-block;
    background-clip: text;
    -webkit-background-clip: text;
    color: white;
    padding: 0 0.1em;
    transition: color 0.5s ease;
  }

  @keyframes gradientAnimation {
    0%,
    25%,
    100% {
      color: white;
    }
    35%,
    65% {
      color: transparent;
    }
  }

  .gradient-text:nth-child(1) {
    animation: gradientAnimation 12s infinite;
    background-image: linear-gradient(to right, #0081ef, #00d7d9);
  }

  .gradient-text:nth-child(2) {
    animation: gradientAnimation 12s infinite 4s;
    background-image: linear-gradient(to right, #7e26c7, #f70586);
  }

  .gradient-text:nth-child(3) {
    animation: gradientAnimation 12s infinite 8s;
    background-image: linear-gradient(to right, #fe5a4a, #fabb2f);
  }

  .gradient-butto {
    background: linear-gradient(
      to right,
      #0081ef,
      #00d7d9,
      #7e26c7,
      #f70586,
      #fe5a4a,
      #fabb2f
    );
    background-size: 300% 300%;
    animation: gradientMove 12s ease infinite;
    position: relative;
    z-index: 1;
  }

  .gradient-butto::before {
    content: "";
    position: absolute;
    top: 2px;
    right: 2px;
    bottom: 2px;
    left: 2px;
    background-color: black;
    border-radius: 0.5rem;
    z-index: -1;
  }

  @keyframes gradientMove {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>
